@model Web.Models.BindingModels.ProfileBindingModel
    
@using (Html.BeginForm("EditMyProfile", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Edit Profile</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.FullName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
            @Html.EditorFor(m => m.FullName, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Name must be between 2 and 50 chars" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AvatarUrl, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.ValidationMessageFor(m => m.AvatarUrl, "", new { @class = "text-danger" })
            @Html.EditorFor(m => m.AvatarUrl, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Image url" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Biography, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.ValidationMessageFor(m => m.Biography, "", new { @class = "text-danger" })
            @Html.EditorFor(m => m.Biography, new { htmlAttributes = new { @class = "form-control input-sm" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Location, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.ValidationMessageFor(m => m.Location, "", new { @class = "text-danger" })
            @Html.EditorFor(m => m.Location, new { htmlAttributes = new { @class = "form-control input-sm" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Website, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.ValidationMessageFor(m => m.Website, "", new { @class = "text-danger" })
            @Html.EditorFor(m => m.Website, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Website url" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BirthDay, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.ValidationMessageFor(m => m.BirthDay, "", new { @class = "text-danger" })
            @Html.EditorFor(m => m.BirthDay, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "dd/mm/yyyy" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Update" />
        </div>
    </div>
}
