@using Twitter.Data
@using Twitter.Data.Models;
@model IEnumerable<Tweet>

<div class="row">
    @foreach (var tweet in Model)
    {
        @tweet.User.FullName
        <br>
        @tweet.Content
        <br>
    }
</div>

